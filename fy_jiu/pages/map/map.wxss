.map {
  width: 100%;
  height: calc(100vh - 90rpx);
  position: relative;
}

.swiper-tab {
  width: 100%;
  text-align: center;
  height: 68rpx;
  display: flex;
  flex-flow: row;
  justify-content: center;
  box-shadow:0px 15px 10px -15px #ccc;
}

.swiper-tab-item {
  font-size: 32rpx;
  color: #333;
  margin-left: 90rpx;
}

.tabImg {
  height: 48rpx;
  width: 48rpx;
  display: block;
  margin: 0 auto;
  margin-top: 9rpx;
}

.tabWz {
  font-size: 14px;
  font-family: PingFang SC;
  font-weight: 500;
}

.swiper-tab-item:first-child {
  margin-left: 0rpx;
}

.active {
  color: #1387f4;
}

.swiperItemList {
  width: 100%;
  height: 506rpx;
  padding: 0 31rpx;
  padding-top: 12rpx;
  box-sizing: border-box;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.swiperItem {
  font-size: 12px;
  color: #333;
  text-align: left;
  margin-top: 25rpx;
  padding-bottom: 15rpx;
  display: flex;
  border-bottom: 1px solid #eee;
}

.dian {
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  background: #1387f4;
  border-radius: 50%;
  margin-bottom: 6rpx;
  margin-right: 8rpx;
}

.swiperItem image {
  height: 38rpx;
  width: 38rpx;
  vertical-align: middle;
}

.fr {
  float: right;
}

.swiperItem view:first-child {
  display: inline-block;
  width: 450rpx;
  text-align: left;
  flex: 7;
}

.juli {
  flex: 3;
}

.map_bottom{
  height: 120rpx;
  padding: 15rpx 0 0 20rpx;
}

.map_title{
  font-size: 15px;
}
.map_desc{
  font-size: 12px;
  color: #bbb;
  margin-top: 10rpx;
}

.map_button{
  position: absolute;
  top: 730rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  z-index: 99;
  right: 20rpx;
  box-shadow: 0rpx 0rpx 20rpx #1387f4;
}

.map_button image{
  width: 90rpx;
  height: 90rpx;
  /* box-shadow: 3rpx 3rpx 3rpx 3rpx #1387f4; */
}