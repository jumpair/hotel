page {
  background-color: #f7f7f7;
  font-size: 12px;
}
.top_{
  background-color: var(--main-color);
  height: 316rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  padding-bottom: 146rpx;
  padding-left:30rpx;
  padding-right:30rpx;
  box-sizing: border-box;
}
.top_ .l_ view{
  font-size:28rpx;
  color: #ffffff;
}
.top_ .l_>text{
  font-size:60rpx;
  color:#ffffff;
  line-height:52rpx;
  display: block;
  margin-top: 15rpx;
}
.top_ .l_ text text{
  font-size: 36rpx;
}

.list_{
  margin: 0 30rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  box-shadow: var(--box-shadow);
  min-height: 100rpx;
  position: relative;
  z-index: 2;
  top: -80rpx;
  border-radius: 12rpx;
  padding: 30rpx 30rpx 50rpx;
}
.title{
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
  margin-bottom: 10rpx;
}
.item{
  height: 100rpx;
  border-bottom:1rpx solid #dddddd;
  position:relative;
}
.item input{
  height: 100rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
}

.tixian input{
  padding-left:70rpx;
  font-size: 40rpx;
  color: #333333;
  font-weight:bold;
  
}
.tixian view{
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  font-size: 60rpx;
  font-weight: bold;
  color: #333333;
}
.tixian text{
  position: absolute;
  display: block;
  width: 140rpx;
  height: 48rpx;
  font-size: 24rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: var(--main-color);
  line-height: 48rpx;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  text-align: right;
  z-index: 10;
}
.btn_{
  height: 92rpx;
  background: var(--main-color);
  border-radius: 46rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 92rpx;
  margin-top: 64rpx;
  text-align: center;
}
