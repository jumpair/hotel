page {
  background-color: #f2f3f8;
  padding-bottom: 150rpx;
}

.score {
  border-radius: 10rpx;
  background-color: #fff;
  margin: 32rpx;
  box-sizing: border-box;
  padding: 32rpx 32rpx 100rpx;
  border-radius: 24rpx;
  box-shadow: var(--box-shadow);
}

.name {
  border-bottom: 1rpx solid #dddddd;
  padding-bottom: 38rpx;
}

.name:after {
  content: '';
  display: block;
  clear: both;
}

.name>.img {
  float: left;
  width: 254rpx;
  height: 156rpx;
  border-radius: 12rpx;
}

.name .right {
  padding-top: 16rpx;
  float: left;
  width: calc(100% - 254rpx);
  padding-left: 34rpx;
  box-sizing: border-box;
}

.name_text {
  font-size: 24rpx;
  font-weight: 400;
  color: #000000;
  line-height: 36rpx;
  height: 72rpx;
  overflow: hidden;
}

.score_info_xx {
  padding-top: 10rpx;
  position: relative;
}

.score_info_xx text {
  position: absolute;
  left: 230rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #000000;
  line-height: 28rpx;
}

.star-image {
  position: relative;
  width: 40rpx;
  height: 40rpx;
}

.item {
  position: absolute;
  top: 0;
  left: 0;
  width: 20rpx;
  height: 40rpx;
}






.share {
  padding: 50rpx 8rpx;
}

.share textarea {
  width: 100%;
  height: 112rpx;
  display: block;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #999999;
}



.add_pic {
  margin-top: 90rpx;
  overflow: hidden;
}

.add_pic image {
  float: left;
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
}

.footer_btn {
  width: 100%;
  box-sizing: border-box;
  z-index: 999;
  background-color: #fff;
  padding-top: 20rpx;
}

.footer_btn view {
  font-size: 32rpx;
  line-height: 92rpx;
  color: #fff;
  border-radius: 60rpx;
  background-color: #BE9C58;
  text-align: center;
}

image {
  display: inline-block;
}

.commentview {
  float: left;
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
  position: relative;
}

.delView {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: 0rpx;
  z-index: 999;
}

.delView image {
  width: 50rpx;
  height: 50rpx;
}

placeholder {
  color: #ccc;
}