@import "./process.wxss";
page{
  background-color:#f9f9f9;
}
.form {
  background: #fff;
  padding: 32rpx;
  box-sizing:border-box;
  margin: 0 30rpx;
  border-radius: 12rpx;
  box-shadow: var(--box-shadow);
}

.form .title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 38rpx 0;
}

.form .title .txt view {
  font-size: 26rpx;
}

.form .title .txt text {
  font-size: 28rpx;
  color: #b0b0bb;
  margin-top: 10rpx;
}

.form .title image {
  width: 48rpx;
}

.form .item {
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #eaeaea;
  font-size: 30rpx;
  height: 78rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.form .item .name {
  font-size: 24rpx;
  font-weight: 400;
  color: #333333;
  line-height: 78rpx;
}
.form .item input{
  text-align: right;
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
}
.form .item image {
  /* width: 36rpx; */
  margin-left: auto;
}

.btn {
  background: #3d7efe;
  margin: 70rpx 38rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 90rpx;
  border-radius: 10rpx;
}



.add_pic{

  overflow: hidden;
}
.add_pic image{
  float: left;
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
}
.footer_btn{
  width: 100%;
  box-sizing: border-box;
  z-index: 999;
  background-color: var(--main-color);
  height: 92rpx;
  border-radius: 46rpx;
  opacity: 1;
  margin-top: 58rpx;
  text-align: center;
  line-height: 92rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #FFFFFF;
}

image{
  display: inline-block;
}
.commentview{
  float: left;
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
  position: relative;
}
.delView{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: 0rpx;
  z-index: 999;
}
.delView image{
  width: 50rpx;
  height: 50rpx;
}
placeholder{
  color: #ccc;
}