page{
  background: #F9F9F9;

}
.layout{
  width: 100%;
  height: auto;
  min-height:600px;
}
.coupon_div{
  width: 95%;
  height: 133px;
  margin: 20rpx auto;
  position: relative;
  margin-bottom:0px;
  
}
.coupon_item{
  border-radius: 10rpx;
  width: 100%;
  z-index: 2;
  position: absolute;
  top:0rpx;
}
.coupon_backimg{
  width: 100%;
  height: 140px;
  position: absolute;
  top:0px;
}
.coupon_backimg image{
  width: 100%;
  height: 140px;
}
.coupon_top{
  width: 100%;
  height: 90px;
  background: #099fde;
  display: flex;
  justify-content: space-between;
  border-radius:10rpx 10rpx 0 0;
}
.coupon_left{
  display: flex;
  flex-direction: column;
  padding: 25rpx 40rpx;
}
.coupon_money{
  font-size: 20px;
  color: white;
}
.coupon_money text{
  font-size: 16px;
  margin-right: 10rpx;
  font-weight: bold;
}
.coupon_condition{
  margin: 5rpx 0 0 0;
  font-size: 24rpx;
  color: white;
}
.coupon_right{
  padding: 50rpx 30rpx 0 0;
}
.coupon_receive{
  width: 160rpx;
  height: 65rpx;
  background: white;
  border-radius: 10rpx;
  font-size: 16px;
  text-align: center;
  color:#099fde;
  line-height: 65rpx;
}
.coupon_bottom{
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 80rpx;
  background: white;
  color:#888888;
  line-height: 80rpx;
  font-size: 13px;
}
.coupon_bottom_left{
  padding-left:40rpx;
}