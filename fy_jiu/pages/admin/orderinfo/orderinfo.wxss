page{
  background: #f5f5f5;
}
.box_{
  margin: 32rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: var(--box-shadow);
  padding: 30rpx 32rpx;
}
.title{
  font-size: 28rpx;
  font-weight: bold;
  color: #000000;
}
.item{
  border-bottom: 2rpx dotted #eeeeee;
  padding: 24rpx 0;
}
.item.bt{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.item view{
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
}
.item text{
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
}

.rzr_item{
  background: #FFFFFF;
  border-radius: 12rpx;
  opacity: 1;
  border: 2rpx solid #EEEEEE;
  padding: 30rpx;
  margin-top: 24rpx;
}
.rzr_title{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.rzr_title view{
  font-size: 24rpx;
  font-weight: 400;
  color: #000000;
}
.rzr_title text{
  font-size: 24rpx;
  font-weight: 400;
  color: #000000;
}
.item.fl{
  overflow: hidden;
}
.item.fl view{
  float: left;
  width: 100rpx;
  font-size: 24rpx;
  color: #666666;
}
.item.fl text{
  float: left;
  width: calc(100% - 100rpx);
  padding-left: 52rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #333333;
}
.btn_box{
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 42rpx;
}
.btn_box .btn{
  height: 52rpx;
  background: var(--main-color);
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 52rpx;
  padding: 0 22rpx;
  margin: 0 20rpx;
}
.input_box{
  display: flex;
  align-items: center;
  justify-content: center;
}
.input_box input{
  margin-right: 10rpx;
  border: 1rpx solid #cccccc;
  padding-left: 10rpx;
  font-size: 24rpx;
  color: #999;
}










