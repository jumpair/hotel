.member-box {
  position: relative;
  height: 440rpx;
}

.member-box>image {
  width: 100%;
  height: 100%;
}


.nav2 {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  box-sizing: border-box;
}

.nav2 .index_h1 {
  text-align: center;
  font-size: 32rpx;
  color: #FFFFFF;
  position: relative;
}

.nav2 .index_h1 .img {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
}

.nav2 .index_h1 .img image {
  width: 40rpx;
  height: 40rpx;
}


.user {
  padding-top: 32rpx;
  width: 750rpx;
  box-sizing: border-box;
  position: relative;
  padding-left: 30rpx
}

.user:after {
  content: '';
  display: block;
  clear: both;
}

.user .userinfo {
  float: left;
  width: 100rpx;
}

.user .userinfo image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.user .name {
  float: left;
  width: 400rpx;
  padding-left: 32rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 40rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.user .time {
  position: absolute;
  right: 0;
  top: 60%;
  transform: translateY(-50%);
  width: 184rpx;
  height: 52rpx;
  background: #EEEEEE;
  border-radius: 60rpx 0 0 60rpx;
  opacity: 1;
  text-align: center;
}

.user .time text {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 24rpx;
}
.cont_{
  padding: 0 30rpx;
  position: relative;
  top: -90rpx;
}
.minute{
  height: 140rpx;
  background: linear-gradient(124deg, #464646 0%, #1F1F1F 100%);
  box-shadow: var(--box-shadow);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
}
.minute .item{
  text-align: center;
}
.minute .val{
  font-size: 40rpx;
  font-weight: 400;
  color: #FCE0A1;
  line-height: 60rpx;
}
.minute .name{
  font-size: 24rpx;
  font-weight: 400;
  color: #CCCCCC;
  line-height: 36rpx;
}
.member-box2{
  box-shadow: var(--box-shadow);
  background: #FFFFFF;
  border-radius: 12rpx;
  margin-top: 32rpx;
  padding: 50rpx 50rpx 40rpx;
}
.member-box2 .title{
  border-bottom: 2rpx solid #eeeeee;
  padding-bottom: 28rpx;
}
.member-box2 .btn{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 46rpx;
}
.member-box2 .btn image{
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto;
}
.member-box2 .btn text{
  font-size: 24rpx;
  font-weight: 400;
  color: #333333;
  line-height: 36rpx;
  margin-top: 22rpx;
}