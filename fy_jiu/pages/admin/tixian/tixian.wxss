.member-box {
  position: relative;
  height: 440rpx;
}

.member-box>image {
  width: 100%;
  height: 100%;
}


.nav2 {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  box-sizing: border-box;
}

.nav2 .index_h1 {
  text-align: center;
  font-size: 32rpx;
  color: #FFFFFF;
  position: relative;
}

.nav2 .index_h1 .img {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
}

.nav2 .index_h1 .img image {
  width: 40rpx;
  height: 40rpx;
}


.user {
  padding-top: 42rpx;
  width: 750rpx;
  box-sizing: border-box;
  position: relative;
  padding-left: 60rpx
}
.user view{
  font-size: 48rpx;
  font-weight: 400;
  color: #FFFFFF;
}
.user text{
  font-size: 24rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 52rpx;
}
.cont_{
  position: relative;
  top: -60rpx;
}
.box_{
  box-shadow: var(--box-shadow);
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 94rpx 32rpx 140rpx;
  margin: 0 32rpx;
  box-sizing: border-box;
}
.box_ input{
  display: block;
  height: 100rpx;
  background-color: #f5f5f5;
  border-radius: 100rpx;
  margin-bottom: 50rpx;
  padding: 0 64rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
}
.box_ .btn{
  height: 92rpx;
  background: var(--main-color);
  border-radius: 46rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  line-height: 92rpx;
  text-align: center;
}