page {
  background-color: #F9F9F9;
  padding-top: 80rpx;
}

.show {
  display: block;
}

.hidden {
  display: none;
}

.coupons_tab {
  background-color: #f5f9fc;
  width: 100%;
  height: 80rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  display: flex;
}

.coupons_tab view {
  width: 33.33%;
  text-align: center;
  font-size: 28rpx;
  line-height: 80rpx;
  color: #57585a;
  position: relative;
}

.coupons_tab view.on {
  color: var(--main-color);
  font-weight: bold;
}

.coupons_tab view.on::after {
  content: "";
  width: 38rpx;
  height: 2rpx;
  background-color: var(--main-color);
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -19rpx;
}

.coupons_list_top_price {
  line-height: 138rpx;
}

