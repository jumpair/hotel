page {
  background-color: #f7f7f7;
  font-size: 12px;
}
.box {
  padding: 30rpx;
}

.header-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  float: left;
}

.header-content {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 32rpx;
  box-shadow: var(--box-shadow);
  box-sizing: border-box;
}
.header-content:after{
  content: '';
  display: block;
  clear: both;
}

.content {
  line-height: 50rpx;
  color: #7a7a7a;
  padding-left: 30rpx;
  float: left;
  width: calc(100% - 100rpx);
  box-sizing: border-box;
}

.header-name {
  line-height: 1.2;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.header-name view:nth-child(1){
  color: #000000;
  font-size: 24rpx;
}
.header-name view:nth-child(2){
  color: #666666;
  font-size: 24rpx;
}

.info{
  display: flex;
  justify-content: space-between;
}
.info-item{
  color: #000000;
  font-size: 24rpx;
}
.info-next{
  color:#000000;
  display: flex;
  align-items: center;
  justify-content: center;
}
.info-next image{
  width: 28rpx;
  height: 28rpx;
  margin-left: 10rpx;
}
