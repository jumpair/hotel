.box {
  height: 120rpx;
  background-color: #fff;
  border-top: 1rpx solid #eeeeee;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 100;
}

.box .info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.box .info .score {
  font-size: 36rpx;
  font-weight: 400;
  color: #333333;
}


.box .info .star {
  display: flex;
  justify-content: center;
}

.box .info .star image {
  width: 22rpx;
}

.list {
  margin-top: 20rpx;
  background: #fff;
  padding-top: 120rpx;
  background-color: #F9F9F9;
}

.list .item {
  padding: 40rpx 30rpx;
  border-bottom: 1px solid #eee;
  background-color: #ffffff;
  box-shadow: var(--box-shadow);
  margin-bottom: 20rpx;
}

.list .item .user {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list .item .user .l_{
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.list .item .user .head {
  width: 90rpx;
  height: 90rpx;
}
.list .item .user .head image {
  width: 90rpx;
}

.list .item .user .name {
  margin-left: 20rpx;
  height: 90rpx;
}

.list .item .user .name text {
  font-size: 32rpx;
  font-weight: 400;
  color: #333333;
  line-height: 48rpx;
}

.list .item .user .name view {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 36rpx;
}

.list .item .user .r_>view:nth-child(1){
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
  text-align: right;
}
.list .item .user .r_>view:nth-child(2){
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-top: 10rpx;
}
.list .item .user .r_>view:nth-child(2) image{
  width: 22rpx;
  height: 22rpx;
}


.list .item .info {
  margin-top: 20rpx;
}

.list .item .info text {
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
  line-height: 40rpx;
  word-break: break-all;
}

.list .item .info>view {
  margin-top: 20rpx;
}
.list .item .info .list__{
  margin: -7rpx;
}
.list .item .info .list__:after{
  content: '';
  display: block;
  clear: both;
}
.list .item .info .img {
  float: left;
  width: 33.33%;
  padding: 7rpx;
  box-sizing: border-box;
  height: 200rpx;
}
.list .item .info .img image{
  width: 100%;
  box-sizing: border-box;
  height: 100%;
}
.head image{
  border-radius: 50%;
}