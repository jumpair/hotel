page{
  height: 100%;
  background-color: #fff;
}
.city_box{
  height: 100%;
}
.city_search{
  height: 160rpx;
  padding-top: 40rpx;
  box-sizing: border-box;
}
.search_box{
  height: 80rpx;
  border-radius: 4rpx;
  background-color: #F9F9FB;
  position: relative;
}
.search_box image{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  left: 24rpx;
  top: 50%;
  margin-top: -16rpx;
}
.search_box input{
  display: block;
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  padding-left: 84rpx;
  box-sizing: border-box;
}
.now_city{
  height: 122rpx;
  border-bottom: 1rpx solid #dddddd;
}
.now_city text{
  font-size: 20rpx;
  font-weight: 400;
  color: #999999;
  line-height: 30px;
}
.now_city view{
  font-size: 36rpx;
  font-weight: 400;
  color: #333333;
  line-height: 54rpx;
}
.history_search .t_{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 40rpx;
}
.history_search .t_>text{
  font-size: 20rpx;
  font-weight: 400;
  color: #333333;
}
.history_search .t_>view{
  display: flex;
  align-items: center;
  justify-content: center;
}
.history_search .t_>view>image{
  width: 28rpx;
  height: 28rpx;
}
.history_search .t_>view>text{
  font-size: 24rpx;
  font-weight: 400;
  color: #333333;
  margin-left: 12rpx;
}
.all_city{
  padding-top: 40rpx;
}
.all_city .t_ text{
  font-size: 20rpx;
  font-weight: 400;
  color: #333333;
}
.city_list .list_{
  margin: -7rpx -5rpx;
  padding-top: 16rpx;
}
.city_list .list_:after{
  content: '';
  display: block;
  clear: both;
}
.city_list .item{
  float: left;
  width: 25%;
  padding: 7rpx 5rpx;
  box-sizing: border-box;
}
.city_list .item text{
  display: block;
  height: 80rpx;
  background: #F9F9FB;
  border-radius: 4px 4px 4px 4px;
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 80rpx;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}