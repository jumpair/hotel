page {
  background-color: #f7f7f7;
  font-size: 12px;
}
.top_{
  background-color: var(--main-color);
  height: 316rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  padding-bottom: 146rpx;
  padding-left:30rpx;
  padding-right:30rpx;
  box-sizing: border-box;
}
.top_ .l_ view{
  font-size:28rpx;
  color: #ffffff;
}
.top_ .l_>text{
  font-size:60rpx;
  color:#ffffff;
  line-height:52rpx;
  display: block;
  margin-top: 15rpx;
}
.top_ .l_ text text{
  font-size: 36rpx;
}
.top_ .r_{
  width: 160rpx;
  height: 52rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #000000;
  line-height: 52rpx;
  text-align: center;
}



.list_{
  position:relative;
  top: -80rpx;
  padding: 0 30rpx;
}
.box {
  box-shadow:var(--box-shadow);
  margin-bottom: 32rpx;
  padding: 28rpx 32rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
}
.rebate-content{
  position: relative;
}
.rebate-content:after{
  content:'';
  display:block;
  clear:both;

}
.rebate-content>image{
  float: left;
  width:60rpx;
  height:60rpx;
}
.rebate-content .mid{
  float: left;
  width: calc(100% - 60rpx);
  padding: 0 30rpx;
  box-sizing: border-box;
}
.rebate-content .mid view:nth-child(1){
  font-size:28rpx;
  color:#333333;
  font-weight:400;
  margin-bottom:10rpx;
}
.rebate-content .mid view:not(:first-child){
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
  line-height: 46rpx;
}
.rebate-content>view:last-child{
  position: absolute;
  right: 0;
  top: 0;
  font-size: 32rpx;
  color: var(--main-color);
  line-height: 48rpx;
}




