/* pages/search/search.wxss */
page {
  background-color: #ffffff;
}
text,
image {
  display: block;
}

.header {
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  top: 0rpx;
  left: 0;
  z-index: 999;
  height: 220rpx;
}
.header .select_01{
  height: 100rpx;
  padding-top: 26rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #dddddd;
  background-color: #ffffff;
}
.header .select_01 .container:after{
  content: '';
  display: block;
  clear: both;
}
.header .select_01 .header_rz{
  float: left;
  width: 124rpx;
  height: 48rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: #333333;
  line-height: 48rpx;
  border-right: 2rpx solid #dddddd;
  position: relative;
}
.header .select_01 .header_rz:after{
  content: '';
  position: absolute;
  border-top: 7rpx solid #999999;
  border-left: 7rpx solid transparent;
  border-right: 7rpx solid transparent;
  right: 22rpx;
  top: 50%;
  transform: translateY(-50%);
}

.header_info {
  float: left;
  height: 48rpx;
  box-sizing: border-box;
  width: 248rpx;
  padding-left: 40rpx;
  position: relative;
  border-right: 2rpx solid #dddddd;
}
.header_info:before{
  content: '';
  display: block;
  clear: both;
}
.header_info:after{
  content: '';
  position: absolute;
  border-top: 7rpx solid #999999;
  border-left: 7rpx solid transparent;
  border-right: 7rpx solid transparent;
  right: 22rpx;
  top: 50%;
  transform: translateY(-50%);
}
.header_info_tit {
  float: left;
  font-size: 20rpx;
  line-height: 24rpx;
  color: #999999;
}

.header_info_time {
  float: left;
  font-size: 20rpx;
  line-height: 24rpx;
  color: var(--main-color);
  margin-left: 20rpx;
}

.header_info_time text {
  color: var(--main-color);
}
.keyword{
  float: left;
  height: 48rpx;
  width: 310rpx;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}
.keyword image{
  position: absolute;
  width: 28rpx;
  height: 28rpx;
  top: 50%;
  left: 38rpx;
  transform: translateY(-50%);
}
.keyword input{
  display: block;
  width: 100%;
  height: 48rpx;
  padding-left:98rpx;
  font-size: 20rpx;
  font-weight: 500;
  color: #999999;
  box-sizing: border-box;
}

.select_02{
  width: 100%;
  box-sizing: border-box;
  height: 100rpx;
  background-color: #ffffff;
  position: relative;
}

.list_{
  padding: 240rpx 0 20rpx;
  background-color: #fff;
}
.browse {
  background-color: #fff;
  margin: 32rpx 30rpx 0;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: var(--box-shadow);
}

.browse_img {
  width: 100%;
  height: 420rpx;
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
  position: relative;
}

.browse_img>image {
  width: 100%;
}
.browse_img .recommended_list_top_read{
  width: 100%;
  height: 60rpx;
  box-sizing:  border-box;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 0rpx 18rpx;
  background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.5100) 33%, #000000 100%);
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.browse_img .recommended_list_top_read .l_ {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.browse_img .recommended_list_top_read .l_ image{
  width: 24rpx;
  height: 24rpx;
}
.browse_img .recommended_list_top_read .l_ text{
  min-width: 38px;
  height: 24px;
  font-size: 16rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 24px;
  margin-left: 12rpx;
}
.browse_img .recommended_list_top_read .r_{
  height: 28rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 28rpx;
}

.browse_con {
  padding: 26rpx 18rpx;
}

.browse_con_tit {
  font-size: 28rpx;
  font-weight: 400;
  color: #000000;
  line-height: 40rpx;
}
.browse_con_fen{
  margin-top: 15rpx;
  position: relative;
}
.browse_con_fen:after{
  content: '';
  display: block;
  clear: both;
}
.browse_con_fen text:nth-child(1) {
  font-size: 24rpx;
  font-weight: 400;
  color: #333333;
  float: left;
  line-height: 30rpx;
}

.browse_con_fen text:nth-child(2){
  font-size: 20rpx;
  font-weight: 400;
  color: #999999;
  float: left;
  max-width: 330rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 30rpx;
  margin-left: 12rpx;
}
.browse_con_fen image{
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}
.browse_con_tab {
  overflow: hidden;
  margin-top: 28rpx;
}
.browse_con_tab:after{
  content: '';
  display: block;
  clear: both;
}

.browse_con_tab view {
  float: left;
  font-size: 20rpx;
  line-height: 32rpx;
  color: #A88A4D;
  background-color: #F5F0E6;
  border-radius: 8rpx;
  text-align: center;
  margin-right: 10rpx;
  height: 36rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  padding: 4rpx 10rpx;
  box-sizing: border-box;
}
