page {
    position: relative;
    background: #eee;
}

.top {
    position: relative;
    width: 100%;
}

.top_bg {
    width: 100%;
    height: 440rpx;
    top: 0;
    left: 0;
}

.top_bg>image {
    width: 100%;
    height: 440rpx;
    position: absolute;
    left: 0;
    top: 0;
}

.top_bg .index_h1 {
    text-align: center;
    font-size: 32rpx;
    color: #FFFFFF;
    position: relative;
}

.top_bg .index_h1 .img {
    position: absolute;
    left: 30rpx;
    top: 50%;
    transform: translateY(-50%);
    width: 40rpx;
    height: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.top_bg .index_h1 .img image {
    width: 36rpx;
    height: 36rpx;
}

.user_div {
    box-sizing: border-box;
    padding: 0 30rpx;
    width: 100%;
    position: relative;
    z-index: 2;
    top: -180rpx;
}

.member {
    border-radius: 12rpx;
    box-sizing: border-box;
    position: relative;
    margin-bottom: 30rpx;
}
.member .cont{
