.user_div{
  z-index: 3;
  background: #FFFFFF;
  box-shadow: var(--box-shadow);
  border-radius: 40rpx 40rpx 0px 0px;
  opacity: 1;
  overflow: hidden;
  position: relative;
  top: -30rpx;
  padding: 40rpx 30rpx 50rpx;
  box-sizing: border-box;
}

.title{
  text-align: center;
  font-size: 36rpx;
  font-weight: 400;
  color: #333333;
  line-height: 52rpx;
  margin-bottom: 50rpx;
}

.input_div{
  width: 100%;
  height: 92rpx;
  border-radius: 12rpx;
  display: flex;
  margin-bottom: 20rpx;
  background-color: #F5F5F5;
}
.left_ico{
  width: 20%;
}
.left_ico image{
  width: 48rpx;
  height: 48rpx;
  margin: 18rpx 0 0 25rpx;
}
.right_input{
  width: 80%;
}
.right_input input{
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  color:#999999;
  font-size: 28rpx;
  
}
.submit_btn{
  width: 100%;
  z-index: 99;
}

.submit_btn button{
  background-color: var(--main-color)!important;
  border: 0px;
  color: white;
  border: none!important;
  box-shadow: none;
  height: 92rpx;
  border-radius: 46rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #FFFFFF!important;
  line-height: 92rpx;
  margin-top: 30rpx;
}
.submit_btn button.no{
  background-color: #ccc!important;
}
.submit_btn button:after{
  border: none;
}
.title1{
  height: 85rpx;
  line-height: 85rpx;
  background: white;
  border-left: 5px solid #099fde;
  font-size: 16px;
  text-indent: 10px;
  display: flex;
  justify-content:space-between;
  position: absolute;
  top: 820rpx;
  width: 100%;
  border-bottom:1px dotted #eeeeee;
}

.level_div{
  position: absolute;
  top: 906rpx;
  width: 100%;
  background: white;
  padding-top: 15rpx;
  padding-bottom: 10rpx;
}
.level_item{
  width: 90%;
  margin: 0 auto;
  display:flex;
  justify-content: space-between;
  font-size: 16px;
  padding-bottom: 10rpx;
  color: #666666;
}
.left_div{
  display: flex;
  justify-content: space-between;
  width: 70%;
}
.level_middle_condition{
  text-align: left;
  width: 55%;
}
