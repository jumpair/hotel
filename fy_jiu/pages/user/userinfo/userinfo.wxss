page{
  position: relative;
  background: #eee;
}
.top{
  position: relative;
  width: 100%;
}
.top_bg{
  width: 100%;
  height: 440rpx;
  top:0;
  left: 0;
}
.top_bg>image{
  width: 100%;
  height: 440rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.top_bg .index_h1{
  text-align: center;
  font-size: 32rpx;
  color: #FFFFFF;
  position: relative;
}
.top_bg .index_h1 .img{
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
}
.top_bg .index_h1 .img image{
  width: 40rpx;
  height: 40rpx;
}
.top_bg .user{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding-left: 30rpx;
  position: relative;
  z-index: 3;
  padding-top: 32rpx;
}
.userinfo-avatar {
  overflow: hidden;
  display: block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.top_bg .user .info{
  padding-left: 24rpx;
}
.top_bg .user .info .name {
  font-size: 40rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 40rpx;

}
.top_bg .user .info .lab {
  display: flex;
  align-items: center;
  margin-top: 25rpx;
  height: 40rpx;
  border-radius: 30rpx;
  opacity: 1;
  border: 1rpx solid #FFFFFF;
  white-space: nowrap; 
  padding: 0 18rpx;
}

.top_bg .user .info .lab image {
  width: 24rpx;
  height: 24rpx;
}

.top_bg .user .info .lab view {
  font-size: 20rpx;
  font-weight: 400;
  color: #FFFFFF;
  margin-left: 4rpx;
  white-space: nowrap;
}








